<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="login_edit_style">
        <item name="android:textSize">@dimen/font_text_size_15</item>
        <item name="android:textColor">@color/color_262628</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="login_pwd_edit_style" parent="login_edit_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_bottom_line</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
