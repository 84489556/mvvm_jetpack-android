<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mainFragmentModel"
            type="com.yd.huixuangu.viewmodel.MainFragmentViewModel" />

        <variable
            name="callback"
            type="com.yd.huixuangu.ui.fragment.MainFragment.MainFragmentCallBack" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main fragment" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开一个fragment"
            android:onClick="@{()->callback.openSecondFragment()}"
            />

    </LinearLayout>
</layout>