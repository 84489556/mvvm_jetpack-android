<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/color_xg_header_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView android:id="@+id/header_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/color_btn_disabled_grey"
            android:src="@mipmap/xuangu_test_header_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/xg_tab_layout"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabPadding="2dp"
            app:tabMaxWidth="130dp"
            app:tabMinWidth="10dp"
            app:tabPaddingStart="3dp"
            app:tabPaddingEnd="3dp"/>
        <ImageView android:id="@+id/famous_up_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/xuangu_famous_up"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</layout>