<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="secondViewModel"
            type="com.yuanda.huixuangu.viewmodel.SecondFragmentViewModel" />

        <variable
            name="callback"
            type="com.yuanda.huixuangu.ui.fragment.SecondFragment.SecondFragmentCallBack" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是第二个fragment" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->callback.back()}"
            android:text="返回上一个fragment" />

    </LinearLayout>
</layout>